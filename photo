<body>

<h1>آپلود عکس و دریافت لینک مستقیم</h1>

<input type="file" id="fileInput" accept="image/*" />
<br />
<button id="uploadBtn">آپلود عکس</button>

<div id="message"></div>

<label for="resultLink">لینک عکس آپلود شده:</label>
<input type="text" id="resultLink" readonly placeholder="لینک عکس اینجا نمایش داده می‌شود..." />

<script>
  const fileInput = document.getElementById('fileInput');
  const uploadBtn = document.getElementById('uploadBtn');
  const resultLink = document.getElementById('resultLink');
  const message = document.getElementById('message');

  const API_KEY = 'e240829b5edf58b647dea59a66c7a299'; // کلید API شما

  uploadBtn.addEventListener('click', () => {
    message.textContent = '';
    if (!fileInput.files.length) {
      message.textContent = 'لطفا یک عکس انتخاب کنید.';
      return;
    }

    const file = fileInput.files[0];
    const reader = new FileReader();

    reader.onload = () => {
      const base64Image = reader.result.replace(/^data:image\/\w+;base64,/, '');
      const formData = new FormData();
      formData.append('key', API_KEY);
      formData.append('image', base64Image);

      message.textContent = 'در حال آپلود...';

      fetch('https://api.imgbb.com/1/upload', {
        method: 'POST',
        body: formData,
      })
        .then(response => response.json())
        .then(data => {
          if(data.success) {
            resultLink.value = data.data.url;
            message.style.color = 'green';
            message.textContent = 'آپلود موفق!';
          } else {
            message.style.color = 'red';
            message.textContent = 'خطا در آپلود: ' + (data.error.message || 'نامشخص');
          }
        })
        .catch(err => {
          message.style.color = 'red';
          message.textContent = 'خطا در ارسال درخواست: ' + err.message;
        });
    };

    reader.readAsDataURL(file);
  });
</script>

</body>
</html>
