  <style>
    body {
      font-family: Tahoma, sans-serif;
      background: #f0f4f8;
      padding: 20px;
      direction: rtl;
    }
    h1 {
      color: #333;
      margin-bottom: 15px;
    }
    input[type="file"] {
      margin-bottom: 10px;
    }
    button {
      background-color: #40c4ff;
      border: none;
      padding: 10px 20px;
      color: white;
      font-weight: bold;
      border-radius: 6px;
      cursor: pointer;
    }
    button:hover {
      background-color: #0099ff;
    }
    input[type="text"] {
      width: 100%;
      padding: 8px;
      margin: 10px 0 5px;
      border: 1px solid #ccc;
      border-radius: 5px;
      font-size: 14px;
      direction: ltr;
    }
    #resultLink {
      word-break: break-all;
    }
    #message {
      color: red;
      margin: 10px 0;
    }
  </style>
